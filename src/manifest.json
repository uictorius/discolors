{
  "manifest_version": 3,
  "name": "Discolors",
  "version": "3.0.0",
  "description": "A lightweight Chrome extension to apply custom themes and colorful gradients to Discord.",
  "permissions": [
    "storage",
    "alarms"
  ],
  "host_permissions": [
    "https://discord.com/*",
    "http://localhost/*"
  ],
  "background": {
    "service_worker": "src/scripts/background/index.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://discord.com/*"
      ],
      "js": [
        "src/scripts/content/index.ts"
      ],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [],
      "matches": [
        "https://discord.com/*"
      ]
    }
  ],
  "action": {
    "default_title": "Discolors",
    "default_popup": "src/ui/popup.html"
  },
  "icons": {
    "16": "icons/16x16.png",
    "48": "icons/48x48.png",
    "128": "icons/128x128.png"
  }
}
